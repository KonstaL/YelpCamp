<% include ../partials/header %>

<div class="container">
    <div class="row">
         <h1 style="text-align: center;">Edit <%=campground.name%></h1>
         <div style="width: 30%; margin: 30px auto;">
          <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="newCamp" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="newImg" value="<%=campground.img%>">
                </div>
                <div class="form-group">
                  <label for="location">Sijainti</label>
                  <input type="text" class="form-control" name="newLocation" id="location"  value="<%=campground.location%>">
                 </div>
                <div class="form-group">
                     <input type="number" class="form-control" name="newPrice"
                            min="0.01" step="0.01" value="<%=campground.price%>">
                </div>
                 <div class="form-group">
                    <input type="text" class="form-control" name="newDesc" value="<%=campground.desc%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
             <script>
                 var map = new google.maps.places.Autocomplete(document.getElementById("location"));
             </script>
         </div>
    </div>
</div>



<% include ../partials/footer %>