<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
        <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="image-responsive" src="<%= foundCamp.img %>">
                <div class="caption-full">
                    <h4 class="pull-right"><%=foundCamp.price%>$ a Night</h4>
                    <h4><a><%= foundCamp.name %></a></h4>
                    <p>
                            <%= foundCamp.desc %>
                    </p>
                    <p>
                        <%=console.log(foundCamp.author.username)%>
                        <em>Submitted by: <%=foundCamp.author.username%></em>
                    </p>
                    <% console.log(foundCamp.author); %>
                    <% if(currentUser && foundCamp.author.id.equals(currentUser._id)) {%>
                        <a href="/campgrounds/<%=foundCamp.id%>/edit" class="btn btn-warning">Edit</a>
                        <form class="delete-form" action="/campgrounds/<%=foundCamp.id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <%    }    %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class ="btn btn-success" href="/campgrounds/<%= foundCamp._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                
                <% foundCamp.comments.forEach(function(comment) { %>
             
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p> <%= comment.text %> </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)) {%>
                                <a class="btn btn-xs btn-warning"
                                   href="/campgrounds/<%=foundCamp.id%>/comments/<%=comment._id%>/edit">
                                    edit
                                </a>
                                <form class="delete-form" action="/campgrounds/<%=foundCamp.id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>






</div>

<% include ../partials/footer %>
