<% include ../partials/header %>

<div class="container">
    <div class="row">
         <h1 style="text-align: center;">Create a new Campground</h1>
         <div style="width: 30%; margin: 30px auto;">
          <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="newCamp" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="newImg" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="newPrice"
                           placeholder="Price per night" min="0.01" step="0.01">
                </div>
                 <div class="form-group">
                    <input type="text" class="form-control" name="newDesc" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
               
         </form>
         
         <a href="/campgrounds">Go back</a>
         </div>
    </div>
</div>

<% include ../partials/footer %>