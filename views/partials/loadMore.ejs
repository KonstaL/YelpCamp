<!-- This code snippet is meant for a AJAX call -->

<div  class="row text-center flexwrap">
     <% campgrounds.forEach(function(camp) { %>
     <div class="col-md-3 col-sm-6 col-xs-12">
         <div class="thumbnail">
            <div class="img-resize" style="background-image:url(<%= camp['img'] %>)"></div>
            <div class="caption">
                <h3>  <%= camp["name"] %> </h3>
            </div>
            <p>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">Lisää</a>
            </p>
         </div>
     </div>
     <% }); %>

    <!-- For passing data to hide load more button -->
    <% if(allLoaded) { %>
        <span id="buttonHide" data-hide="true"></span>
    <%}%>

</div>
