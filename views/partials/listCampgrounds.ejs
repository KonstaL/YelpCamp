                <% } %>
            </div>
        </div>
    <div  class="row text-center" style="display:flex; flex-wrap: wrap;">

        <!--Makes the initially shown campgrounds-->
        <% campgrounds.forEach(function(camp) { %>
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="thumbnail">
                <div class="img-resize" style="background-image:url(<%= camp['img'] %>)"></div>
                <div class="caption">
                    <h3>  <%= camp["name"] %> </h3>
                </div>
                <p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">Lis채채</a>
                </p>
            </div>
        </div>

        <% }); %>
    </div>
