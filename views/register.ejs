<% include ./partials/header %>
<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <form action="/register" method="post">
                <legend class="text-center">Rekistöröidy</legend>
                <div class="form-group">
                    <label for="username">Käyttäjänimi</label>
                    <input class="form-control" type="text" name="username" placeholder="Käyttäjänimi">
                </div>
                <div class="form-group">
                    <label for="email">Sähköposti (ei vaadittu)</label>
                    <input class="form-control" type="email" name="email" placeholder="Sähköposti">
                </div>
                <div class="form-group">
                    <label for="password">Salasana</label>
                    <input class="form-control" type="password" name="password" placeholder="Salasana">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block" type="submit">Rekistöröidy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>